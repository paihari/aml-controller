{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerName": {
            "type": "string",
            "defaultValue": "dynamic-aml-system",
            "metadata": {
                "description": "Name of the container instance"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources"
            }
        },
        "dnsNameLabel": {
            "type": "string",
            "defaultValue": "[concat('aml-system-', uniqueString(resourceGroup().id))]",
            "metadata": {
                "description": "DNS name label for the public IP"
            }
        }
    },
    "variables": {
        "containerGroupName": "[parameters('containerName')]",
        "containerImage": "dynamic-aml:latest"
    },
    "resources": [
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2021-03-01",
            "name": "[variables('containerGroupName')]",
            "location": "[parameters('location')]",
            "properties": {
                "containers": [
                    {
                        "name": "[parameters('containerName')]",
                        "properties": {
                            "image": "[variables('containerImage')]",
                            "ports": [
                                {
                                    "protocol": "TCP",
                                    "port": 5000
                                }
                            ],
                            "environmentVariables": [
                                {
                                    "name": "FLASK_ENV",
                                    "value": "production"
                                },
                                {
                                    "name": "PORT",
                                    "value": "5000"
                                },
                                {
                                    "name": "DATABASE_PATH",
                                    "value": "/app/data/aml_database.db"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "memoryInGB": 1.0,
                                    "cpu": 0.5
                                }
                            }
                        }
                    }
                ],
                "restartPolicy": "Always",
                "ipAddress": {
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": 5000
                        }
                    ],
                    "type": "Public",
                    "dnsNameLabel": "[parameters('dnsNameLabel')]"
                },
                "osType": "Linux"
            }
        }
    ],
    "outputs": {
        "publicIPAddress": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups', variables('containerGroupName'))).ipAddress.ip]"
        },
        "publicURL": {
            "type": "string",
            "value": "[concat('http://', reference(resourceId('Microsoft.ContainerInstance/containerGroups', variables('containerGroupName'))).ipAddress.fqdn, ':5000')]"
        },
        "dashboardURL": {
            "type": "string",
            "value": "[concat('http://', reference(resourceId('Microsoft.ContainerInstance/containerGroups', variables('containerGroupName'))).ipAddress.fqdn, ':5000/dashboard')]"
        }
    }
}