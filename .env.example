# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
USE_SUPABASE_FOR_SANCTIONS=true

# Database Configuration
LOCAL_DB_PATH=aml_data.db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_ROTATION=size
MAX_LOG_SIZE_MB=50
MAX_LOG_FILES=10
LOG_RETENTION_DAYS=30

# Feature Toggles
ENABLE_AUDIT_LOGGING=true
ENABLE_SECURITY_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true
ENABLE_CORRELATION_TRACKING=true

# Development/Debug (set to false in production)
DEBUG_SQL_QUERIES=false
DEBUG_API_REQUESTS=false
DEBUG_CACHE_OPERATIONS=false

# Optional: External Log Aggregation (ELK, Splunk, etc.)
# LOG_AGGREGATION_ENDPOINT=https://your-elk-endpoint
# LOG_AGGREGATION_API_KEY=your-api-key