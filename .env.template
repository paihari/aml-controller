# Environment Template for AML Platform
# Copy this file to .env and fill in your values

# Azure Configuration
AZURE_TENANT_ID=your-tenant-id-here
AZURE_SUBSCRIPTION_ID=your-subscription-id-here

# Databricks Configuration
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=your-databricks-token-here
DATABRICKS_ACCOUNT_ID=your-account-id-here

# Synapse Configuration
SYNAPSE_SERVER=your-synapse-serverless-endpoint.sql.azuresynapse.net
SYNAPSE_DATABASE=aml_bi
# Use either username/password or managed identity
SYNAPSE_USERNAME=your-admin-username
SYNAPSE_PASSWORD=your-admin-password

# Azure SQL Configuration
SQL_SERVER=your-sql-server.database.windows.net
SQL_DATABASE=amlcases
SQL_USERNAME=your-sql-admin
SQL_PASSWORD=your-sql-password

# Power BI Configuration
POWERBI_CLIENT_ID=your-service-principal-client-id
POWERBI_CLIENT_SECRET=your-service-principal-secret

# Storage Configuration
STORAGE_ACCOUNT_NAME=your-storage-account-name
STORAGE_ACCOUNT_KEY=your-storage-key-or-use-managed-identity

# Key Vault Configuration
KEY_VAULT_NAME=kv-aml-plat
KEY_VAULT_URL=https://kv-aml-plat.vault.azure.net/

# Networking
VNET_CIDR=10.10.0.0/16
PE_SUBNET_CIDR=10.10.1.0/24

# Terraform Variables
TF_VAR_tenant_id=${AZURE_TENANT_ID}
TF_VAR_sa_name=${STORAGE_ACCOUNT_NAME}
TF_VAR_location=westeurope
TF_VAR_env=prod
TF_VAR_owner=aml-team